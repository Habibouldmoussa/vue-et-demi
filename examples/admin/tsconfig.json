{
  "compilerOptions": {
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ES2015",
    "outDir": "dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}